{
  "name": "hackernews-modern-client",
  "version": "2.0.0",
  "description": "A modern, fast, and beautiful Hacker News client built with vanilla JavaScript",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "npx http-server -p 8080 -c-1 --cors",
    "dev": "npx http-server -p 8080 -c-1 --cors -o",
    "lint": "eslint *.js",
    "format": "prettier --write \"*.{js,html}\" \"src/**/*.css\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "hackernews",
    "news",
    "client",
    "pwa",
    "vanilla-js",
    "modern",
    "spa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
